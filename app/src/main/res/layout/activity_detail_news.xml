<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailNewsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_news"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="250dp"
            android:src="@drawable/imgnews1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_detail_judul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/faded_brown"
            android:text="Judul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_news" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_detail_deskripsi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/dark_brown"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc hendrerit eros nunc. Cras faucibus diam vitae odio posuere semper. Mauris sed justo dictum, dignissim lorem non, lobortis risus. Quisque mattis interdum fringilla. Nulla vitae orci laoreet, rutrum dolor sit amet, porttitor risus. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia curae; Vivamus laoreet pellentesque purus, vel pretium tortor malesuada eu. Nulla viverra iaculis ante, vel lobortis enim malesuada sed. Duis finibus felis arcu, commodo commodo lectus maximus a. Nulla a iaculis lectus. Curabitur nibh augue, fermentum non volutpat vitae, iaculis sed neque."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_judul" />





    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>